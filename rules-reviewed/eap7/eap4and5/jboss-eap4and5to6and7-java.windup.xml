<?xml version="1.0"?>
<ruleset id="jboss-eap4and5to6and7-java"
         xmlns="http://windup.jboss.org/schema/jboss-ruleset"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">

    <metadata>
        <description>
            This ruleset provides analysis in both JBoss EAP 4 and 5
            that might require individual attention when migrating to JBoss EAP 6 and 7.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final"/>
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final"/>
        </dependencies>
        <sourceTechnology id="eap" versionRange="[4,6)"/>
        <targetTechnology id="eap" versionRange="[6,8)"/>
    </metadata>

    <rules>
        <rule id="jboss-eap4and5to6and7-java-01000">
            <when>
                <javaclass references="org.jboss.security.annotation.SecurityDomain">
                    <location>ANNOTATION</location>
                </javaclass>
            </when>
            <perform>
                <hint issue-display-mode="all" title="Replace org.jboss.security.annotation.SecurityDomain annotation" effort="1" category-id="mandatory">
                    <message>
                        <![CDATA[
                        This application contains the annotation `org.jboss.security.annotation.SecurityDomain`.
                        Recomendation:
                         
                        Replace  `org.jboss.security.annotation.SecurityDomain` with `org.jboss.ejb3.annotation.SecurityDomain`.
                        ]]>
                    </message>
                    <link title="JBoss EAP 6 - Development Guide" href="https://access.redhat.com/documentation/en-us/red_hat_jboss_enterprise_application_platform/6.4/html/development_guide/#Use_a_Security_Domain_in_Your_Application"/>
                    <link title="How to configure EJB3 Domain Security in JBoss EAP 6" href="https://access.redhat.com/solutions/236113"/>
                </hint>
            </perform>
        </rule>
        <rule id="jboss-eap4and5to6and7-java-02000">
            <when>
                <javaclass references="org.jboss.mx.util.MBeanProxyExt">
                    <location>IMPORT</location>
                </javaclass>
            </when>
            <perform>
                <hint issue-display-mode="all" title="Replace org.jboss.mx.util.MBeanProxyExt class" effort="3" category-id="mandatory">
                    <message>
                        <![CDATA[
                        JBoss EAP 4 and 5 contain many mbean-related components such as  `org.jboss.mx.*` that are specific to JBoss \.  
                        In JBoss EAP 6+, these mbean-related components have been removed in order to make containers more compliant with Java EE 6 specifications.
                        
                        Recommendation:
                          
                        Replace the class `MBeanProxyExt.create()` with `JMX.newMBeanProxy()`.
                        ]]>
                    </message>
                    <link title="Where is class MBeanProxyExt in JBoss EAP 6?" href="https://access.redhat.com/solutions/410503"/>
                    <link title="Java EE 6 - Class JMX" href="https://docs.oracle.com/javase/6/docs/api/javax/management/JMX.html"/>
                </hint>
            </perform>
        </rule>
        <rule id="jboss-eap4and5to6and7-java-03000">
            <when>
                <javaclass references="org.jboss.system.{classes}">
                    <location>INHERITANCE</location>
                </javaclass>
            </when>
            <perform>
                <hint issue-display-mode="all" title="Replace ServiceMBean and ServiceMBeanSupport" effort="1" category-id="mandatory">
                    <message>
                        <![CDATA[
                        This application contains JBoss EAP MBean support classes such as `org.jboss.system.ServiceMBean` and `org.jboss.system.ServiceMBeanSupport`, which do not exist in JBoss EAP 6+.  .
                        
                        Recommendation:
                        
                        Replace JBoss EAP MBean support classes with JMX/Mbeans support classes as described in the articles referenced below. 
                        
                        ]]>
                    </message>
                    <link title="How to implement MBeans in JBoss EAP 6" href="https://access.redhat.com/solutions/121823"/>
                </hint>
            </perform>
            <where param="classes">
                <matches pattern="(ServiceMBean|ServiceMBeanSupport)" />
            </where>
        </rule>
    </rules>
</ruleset>
